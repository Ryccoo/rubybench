$grid-float-breakpoint: 1000px

@import "bootstrap-sprockets"
@import "bootstrap"

html
  height: 100%

body
  height: 100%

.main-container
  background-image: url('<%= asset_path 'bg-sand.png' %>')
  min-height: 100%
  padding-top: 70px


.custom-well
  background-color: #fff
  pre
    background-color: #fff

hr
  -moz-border-bottom-colors: none
  -moz-border-image: none
  -moz-border-left-colors: none
  -moz-border-right-colors: none
  -moz-border-top-colors: none
  border-color: #EEEEEE -moz-use-text-color #FFFFFF
  border-style: solid none
  border-width: 1px 0
  margin: 18px 0

.ruby
  color: #cc342d !important

.modal-dialog
  width: 90%
  height: 90%
  padding: 0

.modal-content
  height: 100%
  background-image: url('<%= asset_path 'bg-sand.png' %>')

@media (min-width: $screen-md-min)
  .left-border
    border-left: 1px solid black
    min-height: 100


.modal-chart
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  background: rgba(0, 0, 0, 0.7)
  z-index: 10000

.modal-chart .chart
  height: 90%

.modal-chart-small
  height: 400px

a.inside_navigation
  color: #cc342d
  font-size: 18px

a.inside_navigation:hover
  text-decoration: none
  color: #343434
  font-size: 18px
  border-bottom: 1px solid black
  border-top: 1px solid black
  padding: 5px