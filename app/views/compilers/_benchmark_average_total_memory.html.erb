<div id="memory_total_chart_<%= benchmark.name.parameterize %>"></div>
<script>
  $(function () {
    $('#memory_total_chart_<%= benchmark.name.parameterize %>').highcharts({
      chart: {
        type: 'column',
        zoomType: 'x'
      },
      title: {
        text: '<%= benchmark.name %> total memory results'
      },
      xAxis: {
        type: 'category',
        title: {
          text: 'Versions'
        }
      },
      yAxis: {
//        type: 'logarithmic',
        title: {
          text: 'Memory (MB)'
        },
        plotLines: [{
          color: '#d9443e',
          dashStyle: 'ShortDash',
          width: 1,
          value: <%= get_average_for_compilers_benchmark(results, :memory_total_average) %>,
          zIndex: 5,
          label : {
            text : 'Average',
          }}
        ],
//        min: 0
      },
      plotOptions: {
        column: {
          animation: true,
          dataLabels: {
            enabled: true,
            formatter: function () {
              var values = this.series.data.map( function(item) { return item.y });
              var count = values.length;
              var sum = values.reduce(function(a, b) { return a + b });
              var average = sum / count;
              var percentage = ((this.y - average) / average * 100).toFixed(2);
              if(percentage > 0) {
                return "<span style=\"color:#d9443e; z-index: 0\">+" + percentage + "%</span>"
              } else {
                return "<span style=\"color:green; z-index: 0\">" + percentage + "%</span>"
              }
            },
            zIndex: 0
          }
        }
      },
      tooltip: {
        pointFormat: '<b>{point.y:,.4f}</b> MB'
      },
      series: [
        <% results.keys.sort.reverse.each do |ruby_version| %>
        <% compilers = results[ruby_version] %>
        {
          name: '<%= ruby_version %>',
          showInLegend: true,
          data: [

            <% compilers.keys.sort.each do |compiler| %>
            <% data = compilers[compiler] %>
            {
              name: '<%= compiler %>',
              y: <%= data[:memory_total_average] %>,
              color: Highcharts.getOptions().colors[<%= Result::COMPILERS.index(compiler.split(' ')[0]) %>]
            },
            <% end %>
          ],
        },
        <% end %>
      ],
      exporting: {
        buttons: {
          customButton: {
            x: -42,
            onclick: function () {
              toggle_full_screen('#memory_total_chart_<%= benchmark.name.parameterize %>');
            },
            text: 'Fullscreen'
          }
        }
      },
    });
  });
</script>